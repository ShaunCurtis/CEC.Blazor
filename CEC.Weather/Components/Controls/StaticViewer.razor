@using CEC.Blazor.SPA.Components
@using CEC.Blazor.SPA.Components.Forms
@using CEC.Blazor.SPA.Components.UIControls
@using CEC.Weather.Data
@using CEC.Weather.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components

@namespace CEC.Weather.Components

@inherits Component

<div class="bg-light text-dark p-3 m-2">
    <h4>Static View Component</h4>

    <div class="p-3 m-0 large">
        <div class="container text-danger font-weight-bold">
            <div class="row">
                <div class="col">
                    Current count: @CurrentCount
                </div>
                <div class="col">
                    Object Current count: @CounterInfo.Counter
                </div>
            </div>
        </div>
    </div>
    <div class="text-right mt-2">

        <button class="btn btn-info" @onclick="Render">Render</button>

        <button class="btn btn-warning" @onclick="ResetAsync">Reset</button>

    </div>

    <div class="container m-0 p-0 small border-top">
        <div class="row">
            <div class="col">
                Current Renders: @currentRenders
            </div>
            <div class="col">
                Render Type: @renderType
            </div>
            <div class="col">
                Parameter Set Requests: @ParameterSetRequests
            </div>
        </div>
    </div>

</div>
