@namespace CEC.Blazor.Components.UIControls

@inherits UICardListBase

@if (this.ShowButtons || this.IsPagination)
{
    <UIContainer>

        <UIRow IsFormGroup="true" AddOnCss="mt-2 mr-2">

            <UIColumn Columns="8">
                @Paging
            </UIColumn>

            <UIButtonColumn Columns="4" AddOnCss="mb-1">

                @if (ShowButtons)
                {
                    @Buttons
                    <UIButton Show="this.ShowAdd" ColourCode="Bootstrap.ColourCode.add" SizeCode="Bootstrap.SizeCode.sm" ClickEvent="(e => this.Navigate(PageExitType.ExitToNew))">
                        @String.Concat("Add New ", this.RecordConfiguration.RecordDescription)
                    </UIButton>
                    <UIButton Show="this.ShowAdd"  ColourCode="Bootstrap.ColourCode.nav" SizeCode="Bootstrap.SizeCode.sm" ClickEvent="(e => this.Navigate(PageExitType.ExitToRoot))">
                        Exit
                    </UIButton>
                }

            </UIButtonColumn>

        </UIRow>

    </UIContainer>
}
